<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="zfp.activity.Main"
        android:background="@drawable/wallpaper">

    <TextView
            android:id="@+id/headStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/headStr"
            android:textColor="#00000000"/>

    <Button
            android:id="@+id/btnSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/headStr"
            android:layout_below="@+id/headStr"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="82dp"
            android:text="配置"/>

    <Button
            android:id="@+id/btnConn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btnSet"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:text="连接"/>

    <!-- <Button
        android:id="@+id/btnLoadTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnConn"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/headStr"
        android:layout_marginRight="37dp"
        android:layout_toRightOf="@+id/btnConn"
        android:text="测试" /> -->



</RelativeLayout>
